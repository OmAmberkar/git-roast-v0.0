---
import Layout from '../layouts/Layout.astro';
import RoastForm from '../components/RoastForm.jsx';
---

<Layout title="GIT_ROAST v1.0 | INITIATE_DESTRUCTION">
	<main>
		<h1 class="glitch-header" data-text="GIT_ROAST v1.0">GIT_ROAST v1.0</h1>
		<RoastForm client:load />
		<p class="footer-msg">PROCEED_WITH_CAUTION // SENSITIVE_ENGINEERS_NOT_ALLOWED</p>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 100vh;
	}
	.glitch-header {
		font-size: 4rem;
		font-weight: 900;
		text-align: center;
		margin-bottom: 2rem;
		position: relative;
		color: #0f0;
		letter-spacing: 5px;
	}
	
	/* Simple Glitch Effect */
	.glitch-header::before,
	.glitch-header::after {
		content: attr(data-text);
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: #0a0a0a;
	}
	.glitch-header::before {
		left: 2px;
		text-shadow: -2px 0 #ff00c1;
		clip: rect(44px, 450px, 56px, 0);
		animation: glitch-anim 5s infinite linear alternate-reverse;
	}
	.glitch-header::after {
		left: -2px;
		text-shadow: -2px 0 #00fff9, 2px 2px #ff00c1;
		animation: glitch-anim2 1s infinite linear alternate-reverse;
	}

	@keyframes glitch-anim {
		0% { clip: rect(31px, 9999px, 94px, 0); transform: skew(0.85deg); }
		5% { clip: rect(70px, 9999px, 71px, 0); transform: skew(0.05deg); }
		/* ... simplified ... */
		100% { clip: rect(67px, 9999px, 62px, 0); transform: skew(0.6deg); }
	}
	@keyframes glitch-anim2 {
		0% { clip: rect(65px, 9999px, 100px, 0); transform: skew(0.13deg); }
		100% { clip: rect(10px, 9999px, 50px, 0); transform: skew(0.8deg); }
	}

	.footer-msg {
		margin-top: 2rem;
		font-size: 0.8rem;
		opacity: 0.5;
		letter-spacing: 2px;
	}
</style>
