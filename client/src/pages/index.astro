---
import Layout from '../layouts/Layout.astro';
import RoastForm from '../components/RoastForm.jsx';
---

<Layout title="GIT_ROAST v1.0 | INITIATE_DESTRUCTION">
	<main class="m-auto p-4 w-[800px] max-w-[calc(100%-2rem)] flex flex-col items-center justify-center min-h-screen">
		<h1 class="text-[4rem] font-black text-center mb-8 relative text-terminal-green tracking-[5px] glitch-header" data-text="GIT_ROAST v1.0">GIT_ROAST v1.0</h1>
		<RoastForm client:load />
		<p class="mt-8 text-[0.8rem] opacity-50 tracking-[2px] text-terminal-green">PROCEED_WITH_CAUTION // SENSITIVE_ENGINEERS_NOT_ALLOWED</p>
	</main>
</Layout>

<style>
	/* Blue/Cyan Glitch Effect */
	.glitch-header::before,
	.glitch-header::after {
		content: attr(data-text);
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: #0a0a12; /* Deep Blue Background */
	}
	.glitch-header::before {
		left: 2px;
		text-shadow: -2px 0 #00f3ff; /* Cyan Shadow */
		clip: rect(44px, 450px, 56px, 0);
		animation: glitch-anim 5s infinite linear alternate-reverse;
	}
	.glitch-header::after {
		left: -2px;
		text-shadow: -2px 0 #00a8ff, 2px 2px #ff00c1; /* Blue/Pink Shadow */
		animation: glitch-anim2 1s infinite linear alternate-reverse;
	}

	@keyframes glitch-anim {
		0% { clip: rect(31px, 9999px, 94px, 0); transform: skew(0.85deg); }
		5% { clip: rect(70px, 9999px, 71px, 0); transform: skew(0.05deg); }
		/* ... simplified ... */
		100% { clip: rect(67px, 9999px, 62px, 0); transform: skew(0.6deg); }
	}
	@keyframes glitch-anim2 {
		0% { clip: rect(65px, 9999px, 100px, 0); transform: skew(0.13deg); }
		100% { clip: rect(10px, 9999px, 50px, 0); transform: skew(0.8deg); }
	}
</style>
